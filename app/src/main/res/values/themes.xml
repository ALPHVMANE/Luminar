<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main App Theme -->
    <style name="Theme.Luminar" parent="Theme.Material3.Light.NoActionBar">

        <!-- Palette -->
        <item name="colorPrimary">@color/tropic_wave</item>
        <item name="colorPrimaryContainer">@color/sky_blue</item>
        <item name="colorSecondary">@color/tide_mint</item>
        <item name="colorSecondaryContainer">@color/soft_seafoam</item>

        <!-- Background -->
        <item name="android:windowBackground">@drawable/bg_gradient</item>

        <!-- Apply component styling -->
        <item name="buttonStyle">@style/LuminarButton</item>
        <item name="editTextStyle">@style/LuminarInput</item>
        <item name="checkboxStyle">@style/LuminarCheckbox</item>
        <item name="spinnerStyle">@style/LuminarSpinner</item>
        <item name="bottomNavigationStyle">@style/LuminarBottomNavigation</item>

    </style>


    <!-- Buttons -->
    <style name="LuminarButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_ocean_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Text Input -->
    <style name="LuminarInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:padding">12dp</item>
    </style>


    <!-- Material TextInputLayout (only if used) -->
    <style name="LuminarTextInput" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/soft_seafoam</item>
        <item name="boxStrokeColor">@color/tide_mint</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
    </style>


    <!-- Checkbox -->
    <style name="LuminarCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/tropic_wave</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>


    <!-- Spinner -->
    <style name="LuminarSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:popupBackground">@color/soft_seafoam</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>


    <!-- Bottom Navigation -->
    <style name="LuminarBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
<!--        <item name="itemIconTint">@drawable/bottom_nav_selector</item>-->
<!--        <item name="itemTextColor">@drawable/bottom_nav_selector</item>-->
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="LuminarCalendarView" parent="Theme.MaterialComponents.DayNight">
        <!-- Active date indicator -->
        <item name="colorAccent">@color/tropic_wave</item> <!-- #0096A5 -->
        <item name="colorPrimary">@color/tropic_wave</item>

        <!-- Ripple + focus states -->
        <item name="colorControlActivated">@color/tropic_wave</item> <!-- #9BCCB0 -->

        <!-- Text styling -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Month title + arrows -->
        <item name="android:headerBackground">@android:color/transparent</item>
        <item name="android:weekSeparatorLineColor">@android:color/transparent</item>
    </style>



</resources>
