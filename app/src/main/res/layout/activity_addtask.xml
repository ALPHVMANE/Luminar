<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:padding="32dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Task"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp" />

            <!-- Name -->
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/task_name"
                android:background="@drawable/rounded_box"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColorHint="#A9A9A9"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <!-- Notes -->
            <EditText
                android:id="@+id/edtNotes"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_box"
                android:hint="@string/notes"
                android:inputType="textMultiLine"
                android:paddingHorizontal="16dp"
                android:textColorHint="#A9A9A9" />

            <Spinner
                android:id="@+id/spnCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_box"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColorHint="#A9A9A9"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recurrent Task ?" />

                <CheckBox
                    android:id="@+id/chkNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Enable Reminders" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtGoalDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/goal_date"
                android:background="@drawable/rounded_box"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColorHint="#A9A9A9"
                android:inputType="date"
                android:layout_marginBottom="16dp" />

            <Spinner
                android:id="@+id/spnFrequency"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_box"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColorHint="#A9A9A9"
                android:layout_marginBottom="16dp" />

            <!-- Submit Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_box"
                    android:hint="@string/start_time"
                    android:inputType="time"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColorHint="#A9A9A9" />

                <EditText
                    android:id="@+id/edtEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_box"
                    android:hint="@string/end_time"
                    android:inputType="time"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColorHint="#A9A9A9" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_box"
                android:layout_marginTop="40dp"
                android:paddingVertical="10dp"
                android:text="@string/save_task"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>